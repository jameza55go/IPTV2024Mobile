<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_live"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:id="@+id/bt_live"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/bt_select_live"
            >

            <ImageView
                android:id="@+id/chanel_logo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chanel_number"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textSize="24sp"
                android:text="1"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chanel_logo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chanel_title"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:singleLine="true"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ico_fav"
                app:layout_constraintStart_toEndOf="@+id/chanel_number"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/ico_fav"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fav_w"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="2dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>