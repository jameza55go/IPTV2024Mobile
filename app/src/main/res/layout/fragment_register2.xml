<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.RegisterFragment"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_box_login"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/ic_user" />

                <EditText
                    android:id="@+id/user"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="password"
                    android:background="@null"
                    android:hint="@string/txt_username"
                    android:inputType="textNoSuggestions|text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_size_login" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/text_advice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_register_detail1"
            android:textSize="@dimen/text_advice_size"
            android:layout_marginStart="@dimen/text_advice_margin"
            android:textColor="@color/orange_main"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_box_login"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_advice_password">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/baseline_local_phone_24" />

                <EditText
                    android:id="@+id/phonenumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/txt_accept_number"
                    android:inputType="textNoSuggestions|numberDecimal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_size_login" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/text_advice_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_advice_margin"
            android:text="@string/txt_register_detail2"
            android:textColor="@color/orange_main"
            android:textSize="@dimen/text_advice_size"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout_password"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_box_login"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_advice_name">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/ic_lock" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="password"
                    android:background="@null"
                    android:hint="@string/txt_password"
                    android:inputType="textNoSuggestions|textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_size_login" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/text_advice_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/txt_register_detail3"
            android:textColor="@color/orange_main"
            android:textSize="@dimen/text_advice_size"
            app:layout_constraintStart_toStartOf="@+id/linearLayout_password"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_password" />

        <LinearLayout
            android:id="@+id/linearLayout_otp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_box_login"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_advice_phone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/ic_lock" />

                <EditText
                    android:id="@+id/otp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="password"
                    android:background="@null"
                    android:hint="OTP"
                    android:inputType="textNoSuggestions|textPassword"
                    android:nextFocusRight="@+id/linearLayout_receive_otp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/text_size_login" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/text_advice_re_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_advice_margin"
            android:text="@string/detail_otp"
            android:textColor="@color/orange_main"
            android:textSize="@dimen/text_advice_size"
            app:layout_constraintStart_toStartOf="@+id/linearLayout_otp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_otp" />


        <LinearLayout
            android:id="@+id/linearLayout_receive_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/otp"
            android:background="@drawable/bt_select_otp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout_otp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout_otp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout_otp">

            <TextView
                android:id="@+id/text_receive_otp"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:textSize="@dimen/text_advice_size"
                android:gravity="center"
                android:text="@string/send_otp"
                android:textColor="@color/black" />


        </LinearLayout>
