<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingBottom="30dp"
        android:paddingTop="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_grey_corner_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activate_line_title"
            android:textColor="@color/white"
            android:textSize="@dimen/alert_text_main"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="270dp"
            android:layout_height="@dimen/activate_line_row_height"
            android:layout_marginTop="@dimen/activate_line_row_margin_top"
            android:background="@drawable/bg_box_gift_card"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/activate_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/alert_text_main" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="270dp"
            android:layout_height="@dimen/activate_line_row_height"
            android:layout_marginTop="@dimen/activate_line_row_margin_top"
            android:background="@drawable/bg_box_gift_card"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/activate_code2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="@dimen/alert_text_main" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_confirm_activate_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activate_line_row_height"
            android:layout_marginTop="@dimen/activate_line_row_margin_top"
            android:background="@drawable/bt_select_style_6"
            android:gravity="center"

            app:layout_constraintEnd_toEndOf="@+id/linearLayout6"
            app:layout_constraintStart_toStartOf="@+id/linearLayout6"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

            <TextView
                android:id="@+id/text_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="2dp"
                android:paddingEnd="20dp"
                android:paddingBottom="2dp"
                android:gravity="center"
                android:textSize="@dimen/alert_text_main"
                android:text="@string/bt_accept"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/bt_confirm_activate_code"
            app:layout_constraintStart_toEndOf="@+id/linearLayout5"
            app:layout_constraintTop_toTopOf="@+id/textView7">

            <ImageView
                android:id="@+id/lineadd"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/qr_code_new"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/linetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/yellow"
                />
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="@dimen/activate_line_bg_logo"
        android:layout_height="@dimen/activate_line_bg_logo"
        android:layout_marginBottom="-30dp"
        android:layout_marginEnd="180dp"
        android:layout_marginStart="140dp"
        android:background="@drawable/bg_black_circle"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_padlock" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>