<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tool.point.PointActivity"
    android:background="@color/black"
    android:keepScreenOn="true"
    android:padding="20dp"
    >

    <include
        android:id="@+id/logo"
        layout="@layout/layout_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/high_logo"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_weight="7"
            android:background="@drawable/bg_white_transparent_20_corner"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingStart="30dp"
                android:text="@string/txt_select"
                android:textSize="@dimen/point_menu_text_size"
                android:textColor="@color/white"
                tools:ignore="RtlSymmetry" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/text_menu_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black_transparent2"
                    android:maxLines="1"
                    android:paddingStart="30dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/txt_info"
                    android:textSize="@dimen/point_menu_text_size"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:visibility="visible"
                    android:id="@+id/view_menu_detail"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@color/orange_main"
                    app:layout_constraintBottom_toBottomOf="@+id/text_menu_detail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_menu_detail" />

                <TextView
                    android:id="@+id/text_menu_exchange_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black_transparent2"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:paddingStart="30dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/txt_exchange_point"
                    android:textSize="@dimen/point_menu_text_size"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_menu_detail"
                    tools:ignore="RtlSymmetry" />

                <View
                    android:visibility="invisible"
                    android:id="@+id/view_menu_exchange_point"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@color/orange_main"
                    app:layout_constraintBottom_toBottomOf="@+id/text_menu_exchange_point"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_menu_exchange_point" />



                <TextView
                    android:id="@+id/text_menu_gift_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:background="@color/black_transparent2"
                    android:layout_marginTop="5dp"
                    android:paddingStart="30dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="@dimen/point_menu_text_size"
                    android:text="@string/txt_gift_code"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_menu_exchange_point"
                    tools:ignore="RtlSymmetry" />
                <View
                    android:visibility="invisible"
                    android:id="@+id/view_menu_gift_code"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@color/orange_main"
                    app:layout_constraintBottom_toBottomOf="@+id/text_menu_gift_code"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_menu_gift_code" />

                <TextView
                    android:id="@+id/text_menu_point_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:background="@color/black_transparent2"
                    android:layout_marginTop="5dp"
                    android:paddingStart="30dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="@dimen/point_menu_text_size"
                    android:text="@string/point_history"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_menu_gift_code"
                    tools:ignore="RtlSymmetry" />
                <View
                    android:visibility="invisible"
                    android:id="@+id/view_menu_point_history"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:background="@color/orange_main"
                    app:layout_constraintBottom_toBottomOf="@+id/text_menu_point_history"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_menu_point_history" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/bg_white_transparent_20_corner"
            android:orientation="vertical"
            android:padding="20dp">

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_topic_textview"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/txt_contact"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/txt_contact_detail1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_contact_detail2"
        android:textColor="@color/orange_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_contact_detail3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent2"
        android:gravity="center"
        >
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>